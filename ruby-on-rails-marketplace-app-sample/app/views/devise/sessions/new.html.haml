= render 'layouts/header'
%section.section.form-signin
	= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
		.grid-container
			.grid-x.grid-padding-x
				.large-8.large-offset-2.cell
					%h1.h2 Sign in to #{ current_site.name }
					.card.card-round
						%label.aslabel.mb0
							Enter your email
							%input.input-nob{:name => "user[email]", :placeholder => "Your email", :type => "email", autofocus: true}/
					.card.card-round
						%label.aslabel.mb0
							Enter your password
							%input.input-nob{:name => "user[password]", :placeholder => "Your password", :type => "password", autocomplete:"off"}/
					.grid-x.grid-padding-x
						- flash.each do |key, value|
							.medium-12.cell
								.callout.radius.warning{class: key}
									= value
						.medium-6.cell
							%button.button.success.medium{:type => "submit"}
								Sign In
								%i.flaticon-long-arrow-right
						.medium-6.cell.text-right.small-text-left
							- if devise_mapping.recoverable?
								= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn-forgot'
					.grid-x.grid-padding-x.sign-upbtn
						- if false
							.medium-6.cell
								%p Or Sign In Using:
								%a.button.btn-facebook.large.expanded{:href => "#"}
									%i.flaticon-facebook-logo
									%strong Sign in via Facebook
						.medium-6.cell
							%p Dont Have An Account?
							%a.button.btn-border-green.large.expanded{:href => new_registration_path(resource_name)}
								%strong
									Create it now for free
									%i.flaticon-long-arrow-right
= render 'layouts/footer_hero'
= render 'layouts/footer'
